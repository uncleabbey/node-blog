{
  "name": "stupress",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.11",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "swagger-jsdoc": "^4.3.1",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.1",
    "@babel/register": "^7.12.1",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "13.0.4",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node src/app.js",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && babel src -d ./dist",
    "start": "npm run build && node ./dist/app.js",
    "db:refresh": "mongo blog_test --eval 'db.getCollectionNames().forEach(function(n){db[n].remove({})});'",
    "db:refresh:local": "mongo blog_test --eval db.getCollectionNames().forEach(function(n){db[n].remove({})});",
    "testing": "cross-env NODE_ENV=test nyc mocha --timeout 20000 --exit",
    "test": "npm run db:refresh && npm run testing",
    "test-local": "npm run db:refresh:local && npm run testing",
    "cover": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls": "coveralls < lcov.info",
    "coverage": "npm run cover && npm run coveralls"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
